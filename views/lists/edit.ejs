
<p>this is where I add the list items</p>

    <ul>
      <% lists.forEach((list) => { %>
          <% if(locals.isLoggedIn && list.createdBy.id === locals.user.id) { %>
        <li>
          <h3 class="title is-4"><a href="/lists/<%= list.id %>/edit"><%= list.name %></a></h3>
          <p class="subtitle is-6">By <%= list.createdBy.username %></p>
          <br>
        </li>
      <% }}) %>
    </ul>

  <form method="POST" action="/lists/<%= list.id %>/edit">
  <input type="hidden" name="_method" value="PUT">
  <ul id="products">
  </ul>

            <select name="category" id="category">
